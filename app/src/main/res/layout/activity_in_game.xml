<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".InGameActivity">

    <EditText
        android:id="@+id/etnCar2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="   Car 2"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etnCar1"
        android:drawableLeft="@drawable/car2"/>

    <Button
        android:id="@+id/btnBet"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:text="Bet"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etnCar3"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/etnCar1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:background="#FFFFFF"
        android:hint="   Car 1"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBalance"
        android:drawableLeft="@drawable/car1"/>

    <EditText
        android:id="@+id/etnCar3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="   Car 3"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etnCar2"
        android:drawableLeft="@drawable/car3"/>

    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="209dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/sbCar2"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/road"
        android:max="1000"
        android:progress="0"
        android:thumb="@drawable/car2"
        app:layout_constraintBottom_toTopOf="@+id/sbCar3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/sbCar3"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/road"
        android:max="1000"
        android:progress="0"
        android:thumb="@drawable/car3"
        app:layout_constraintBottom_toTopOf="@+id/btnStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/sbCar1"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/road"
        android:max="1000"
        android:progress="0"
        android:thumb="@drawable/car1"
        app:layout_constraintBottom_toTopOf="@+id/sbCar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnStart"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="285dp"
        android:layout_height="49dp"
        android:layout_marginBottom="10dp"
        android:text="START"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>