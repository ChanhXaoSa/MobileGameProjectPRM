<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InGameActivity">

    <EditText
        android:id="@+id/etnCar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etnCar2" />

    <EditText
        android:id="@+id/etnCar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etnCar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etnCar1" />

    <SeekBar
        android:id="@+id/sbCar2"
        android:layout_width="330dp"
        android:layout_height="69dp"
        android:layout_marginBottom="24dp"
        android:max="100"
        android:progress="0"
        app:layout_constraintBottom_toTopOf="@+id/sbCar3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/sbCar3"
        android:layout_width="330dp"
        android:layout_height="69dp"
        android:layout_marginBottom="56dp"
        android:max="100"
        android:progress="0"
        app:layout_constraintBottom_toTopOf="@+id/btnStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/sbCar1"
        android:layout_width="330dp"
        android:layout_height="69dp"
        android:layout_marginBottom="20dp"
        android:max="100"
        android:progress="0"
        app:layout_constraintBottom_toTopOf="@+id/sbCar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="Start"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="209dp"
        android:layout_height="35dp"
        android:layout_marginTop="52dp"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bet"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="@+id/etnCar3"
        app:layout_constraintStart_toStartOf="@+id/etnCar3"
        app:layout_constraintTop_toBottomOf="@+id/etnCar3" />

</androidx.constraintlayout.widget.ConstraintLayout>